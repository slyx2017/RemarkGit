@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>二维码生成</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/qrcode")
</head>
<body>
    <div style="margin:15px auto 30px auto;width:800px;">
        <h1>二维码生成</h1>
        <div class="row">
            <div class="col-xs-6">
                <input type="text" class="form-control" id="text" value="https://www.mcpsystem.com/" placeholder="Input a text" />
            </div>
            <div class="col-xs-3">
                <select id="size" class="form-control">
                    <option value="100">100</option>
                    <option value="200">200</option>
                    <option value="300">300</option>
                </select>
            </div>
            <div class="col-xs-3">
                <a id="btok" class="btn btn-default" href="#" role="button">生成</a>
            </div>
        </div>
        <div id="qrcode" style="width:100px; height:100px; margin-top:15px;"></div>
    </div>
    <script type="text/javascript">
        function makeCode() {
            $("#qrcode").html("");
            var elText = $("#text");

            if (!elText.val()) {
                alert("Input a text");
                elText.focus();
                return;
            }
            var val = $("#size").val();
            $("#qrcode").css({
                "width": val,
                "height": val
            });
            var qrcode = new QRCode(document.getElementById("qrcode"), {
                width: parseInt(val),
                height: parseInt(val)
            });
            qrcode.makeCode(elText.val());
        }
        $("#btok").on("click", function () {
            makeCode();
        });
    </script>
</body>
</html>
